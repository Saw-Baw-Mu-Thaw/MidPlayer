<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="ControlButton">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/circular_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ControlButton.Primary" parent="ControlButton">
        <item name="android:backgroundTint">@color/blue_accent</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ControlButton.Small" parent="ControlButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>