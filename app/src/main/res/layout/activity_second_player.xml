<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PlayMedia">

    <LinearLayout
        android:id="@+id/bottomControlGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/currentTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="8dp"
                android:text="0:00"
                android:textColor="#333333"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/mediaSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="25"
                android:progressTint="#304FFE"
                android:thumbTint="#304FFE" />

            <TextView
                android:id="@+id/durationTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="3:30"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/favoriteSong"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Play/Pause Button"
                android:focusable="true"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_favorite"
                app:tint="#304FFE" />

            <ImageView
                android:id="@+id/skipBack"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Play/Pause Button"
                android:focusable="true"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_previous"
                app:tint="#304FFE" />

            <ImageView
                android:id="@+id/playPauseButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Play/Pause Button"
                android:focusable="true"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_play_arrow"
                app:tint="#304FFE" />

            <ImageView
                android:id="@+id/skipForward"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Play/Pause Button"
                android:focusable="true"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_next"
                app:tint="#304FFE" />


            <Spinner
                android:id="@+id/speedSelectionSpinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Home Button"
                android:focusable="true"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_home"
                app:tint="#304FFE" />

            <ImageView
                android:id="@+id/musicLibrary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Music Library"
                android:focusable="true"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_music_library"
                app:tint="#304FFE" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topContentGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomControlGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo"
                app:tint="#000000" />

            <TextView
                android:id="@+id/songNameMini"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="Clarity"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_account"
                app:tint="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/songNameBig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="Clarity"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/musicPlayerGif"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:tint="#000000" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>